{
    "version": 4,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cmakeExecutable": "cmake",
            "cacheVariables": {
                "CPM_SOURCE_CACHE": "${sourceDir}/build/.cache",
                "CMAKE_C_VISIBILITY_PRESET": "hidden",
                "CMAKE_CXX_VISIBILITY_PRESET": "hidden",
                "CMAKE_VISIBILITY_INLINES_HIDDEN": "1"

            }
        },
        {
            "name": "host-linux",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "host-macos",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "host-windows",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "host-not-windows",
            "hidden": true,
            "condition": {
                "type": "notEquals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "target-linux-arm64",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Linux",
                "CMAKE_SYSTEM_PROCESSOR": "aarch64"
            }
        },
        {
            "name": "target-android",
            "hidden": true,
            "toolchainFile": "$env{ANDROID_NDK}/build/cmake/android.toolchain.cmake",
            "cacheVariables": {
                "ANDROID_NDK": "$env{ANDROID_NDK}",
                "ANDROID_PLATFORM": "android-27",
                "OPENSSL_CONFIGURE_OPTIONS": "-D__ANDROID_API__=27;--openssldir=/system/etc/security/cacerts",
                "OPENSSL_PATCH": "${sourceDir}/patch/android.patch"
            }
        },
        {
            "name": "target-android-arm32",
            "hidden": true,
            "inherits": "target-android",
            "cacheVariables": {
                "ANDROID_ABI": "armeabi-v7a"
            }
        },
        {
            "name": "target-android-arm64",
            "hidden": true,
            "inherits": "target-android",
            "cacheVariables": {
                "ANDROID_ABI": "arm64-v8a"
            }
        },
        {
            "name": "target-android-x86",
            "hidden": true,
            "inherits": "target-android",
            "cacheVariables": {
                "ANDROID_ABI": "x86"
            }
        },
        {
            "name": "target-android-x86-64",
            "hidden": true,
            "inherits": "target-android",
            "cacheVariables": {
                "ANDROID_ABI": "x86_64"
            }
        },
        {
            "name": "target-ios",
            "hidden": true,
            "toolchainFile": "${sourceDir}/ww/cmake/toolchain/ios.cmake",
            "cacheVariables": {
                "CMAKE_OSX_SYSROOT": "iphoneos",
                "CMAKE_OSX_ARCHITECTURES": "x64"
            }
        },
        {
            "name": "target-ios_sim",
            "hidden": true,
            "toolchainFile": "${sourceDir}/ww/cmake/toolchain/ios_sim.cmake",
               "cacheVariables": {
                "CMAKE_OSX_SYSROOT": "iphoneos",
                "CMAKE_OSX_ARCHITECTURES": "x64"

            }
        },
        {
            "name": "target-linux",
            "hidden": true
        },
        {
            "name": "target-macos",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_OSX_DEPLOYMENT_TARGET": "12.0",
                "OPENSSL_CONFIGURE_OPTIONS": "-mmacos-version-min=12.0"
            }
        },
        {
            "name": "target-windows",
            "hidden": true
        },
        {
            "name": "target-windows-arm32",
            "hidden": true,
            "inherits": "target-windows",
            "architecture": {
                "value": "ARM"
            },
            "cacheVariables": {
                "CMAKE_SYSTEM_VERSION":"10.0.19041.0",
                "CMAKE_SYSTEM_NAME": "Windows",
                "CMAKE_SYSTEM_PROCESSOR": "ARM",
                "OPENSSL_NO_ASM": "1"
            }
        },
        {
            "name": "target-windows-arm64",
            "hidden": true,
            "inherits": "target-windows",
            "architecture": {
                "value": "ARM64"
            },
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Windows",
                "CMAKE_SYSTEM_PROCESSOR": "ARM64",
                "OPENSSL_NO_ASM": "1"
            }
        },
        {
            "name": "target-windows-x86",
            "hidden": true,
            "inherits": "target-windows",
            "architecture": {
                "value": "Win32"
            }
        },
        {
            "name": "target-windows-x86-64",
            "hidden": true,
            "inherits": "target-windows",
            "architecture": {
                "value": "x64"
            }
        },
        {
            "name": "ninja",
            "hidden": true,
