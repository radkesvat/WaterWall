        },
        {
            "name": "old-cpu-x64",
            "hidden": true,
            "cacheVariables": {
                "DISABLE_AVX": "ON",
                "CMAKE_C_FLAGS": "-march=x86-64 -mtune=generic  -mno-avx",
                "CMAKE_CXX_FLAGS": "-march=x86-64 -mtune=generic  -mno-avx"
            }
        },
        {
            "name": "old-cpu-arm",
            "hidden": true,
            "cacheVariables": {
